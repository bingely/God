<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:paddingLeft="20dip" 
    android:background="@drawable/list_item_bg">

    <TextView
        android:id="@+id/list_popup_title_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:gravity="center_horizontal"
        android:singleLine="true"
        android:textColor="#252525"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/list_popup_title_img"
        android:layout_width="14dip"
        android:layout_height="14dip"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dip"
        android:layout_toLeftOf="@id/list_popup_title_name"
        android:src="@drawable/popup_spinner_select" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:background="@color/listview_line_color" />

</RelativeLayout>