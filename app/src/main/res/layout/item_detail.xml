<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/detail_product_image"
        android:layout_centerVertical="true"
        android:layout_width="@dimen/global_list_image_size"
        android:layout_height="@dimen/global_list_image_size" />

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/store_order_item_height"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@id/detail_product_image" >

        <TableRow
            style="@style/detail_row_style">

            <TextView
                android:textStyle="bold"
                android:id="@+id/detail_product_name"
                style="@style/detail_tv_style" />

            <TextView
                android:id="@+id/detail_product_amount"
                style="@style/detail_tv_style" />
        </TableRow>

        <TableRow style="@style/detail_row_style">

            <TextView
                android:id="@+id/detail_product_price"
                style="@style/detail_tv_style" />

            <TextView
                android:id="@+id/detail_product_total"
                style="@style/detail_tv_style" />
        </TableRow>
    </TableLayout>

</RelativeLayout>