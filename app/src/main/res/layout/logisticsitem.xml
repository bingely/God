<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     >

    <ImageView
        android:id="@+id/logisticsitem_unchecked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="30dp"
        android:src="@drawable/check_off" />

    <TextView
        android:id="@+id/logisticsitem_site"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/logisticsitem_unchecked"
        android:layout_toRightOf="@+id/logisticsitem_unchecked"
        android:layout_marginLeft="30dp"
        android:text="收货地址" />

    <TextView
        android:id="@+id/logisticsitem_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/logisticsitem_unchecked"
        android:layout_below="@+id/logisticsitem_site"
        android:layout_marginTop="12dp"
        android:text="收货时间" />
    
    <View 
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/logisticsitem_date"
        android:background="@color/gray"/>

</RelativeLayout>
