      <com.facebook.drawee.view.SimpleDraweeView
        xmlns:fresco="http://schemas.android.com/apk/res-auto"
        android:id="@+id/iv_executor_avatar"
        android:layout_width="@dimen/global_list_image_size"
        android:layout_height="@dimen/global_list_image_size"
        android:layout_gravity="center_vertical"
        android:layout_margin="12dp"
        android:layout_marginLeft="7dp"
        fresco:actualImageScaleType="centerCrop"
        fresco:placeholderImage="@drawable/loading_default"
        fresco:retryImageScaleType="centerCrop"
        fresco:roundAsCircle="false"
        fresco:roundBottomLeft="true"
        fresco:roundBottomRight="true"
        fresco:roundTopLeft="true"
        fresco:roundTopRight="true"
        fresco:roundedCornerRadius="5dp" />

    <TextView
        android:id="@+id/tv_executorr_name"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:text="你好"
        android:textColor="@color/text_small_black"
        android:textSize="16sp" />

</LinearLayout>