<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/window_bg"
    android:fitsSystemWindows="true"
    android:orientation="vertical" >

    <include layout="@layout/three_widget_titlelayout" />

    <com.meetrend.haopingdian.util.BounceScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="30dip" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="110dip"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/store_check_padding_left_right"
                android:paddingRight="@dimen/store_check_padding_left_right" >

                <TextView
                    android:id="@+id/check_id"
                    style="@style/store_check_black_textview_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="盘点标号：" />

                <TextView
                    android:id="@+id/check_excutor"
                    style="@style/store_check_grary_textview_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/check_id"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="10dip"
                    android:text="经办人：" />

                <TextView
                    android:id="@+id/check_time"
                    style="@style/store_check_grary_textview_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/check_excutor"
                    android:layout_centerVertical="true"
                    android:text="盘点时间：" />
            </RelativeLayout>

            <View style="@style/horizontal_no_margin_divider_style" />

            <View
                style="@style/horizontal_no_margin_divider_style"
                android:layout_marginTop="20dip" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical" >

                <LinearLayout style="@style/store_check_linear_item_style" >

                    <TextView
                        style="@style/store_check_black_textview_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="微信总额" />

                    <TextView
                        android:id="@+id/weixin_money_view"
                        style="@style/store_check_black_textview_style"
                        android:layout_width="0dip"
                        android:layout_height="fill_parent"
                        android:layout_gravity="center_vertical|right"
                        android:layout_weight="1"
                        android:background="@null"
                        android:gravity="right|center_vertical" />
                </LinearLayout>

                <View
                    style="@style/horizontal_no_margin_divider_style"
                    android:layout_marginLeft="15dip" />

                <LinearLayout style="@style/store_check_linear_item_style" >

                    <TextView
                        style="@style/store_check_black_textview_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="现金总额" />

                    <TextView
                        android:id="@+id/xianjin_money_view"
                        style="@style/store_check_black_textview_style"
                        android:layout_width="0dip"
                        android:layout_height="fill_parent"
                        android:layout_gravity="center_vertical|right"
                        android:layout_weight="1"
                        android:background="@null"
                        android:gravity="right|center_vertical" />
                </LinearLayout>

                <View
                    style="@style/horizontal_no_margin_divider_style"
                    android:layout_marginLeft="15dip" />

                <LinearLayout style="@style/store_check_linear_item_style" >

                    <TextView
                        style="@style/store_check_black_textview_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="刷卡总额" />

                    <TextView
                        android:id="@+id/shuaka_money_view"
                        style="@style/store_check_black_textview_style"
                        android:layout_width="0dip"
                        android:layout_height="fill_parent"
                        android:layout_gravity="center_vertical|right"
                        android:layout_weight="1"
                        android:background="@null"
                        android:gravity="right|center_vertical" />
                </LinearLayout>

                <View
                    style="@style/horizontal_no_margin_divider_style"
                    android:layout_marginLeft="15dip" />

                <LinearLayout style="@style/store_check_linear_item_style" >

                    <TextView
                        style="@style/store_check_black_textview_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="记账总额" />

                    <TextView
                        android:id="@+id/jizhang_money_view"
                        style="@style/store_check_black_textview_style"
                        android:layout_width="0dip"
                        android:layout_height="fill_parent"
                        android:layout_gravity="center_vertical|right"
                        android:layout_weight="1"
                        android:background="@null"
                        android:gravity="right|center_vertical" />
                </LinearLayout>

                <View
                    style="@style/horizontal_no_margin_divider_style"
                    android:layout_marginLeft="15dip" />

                <LinearLayout style="@style/store_check_linear_item_style" >

                    <TextView
                        style="@style/store_check_black_textview_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="收款总额" />

                    <TextView
                        android:id="@+id/shoukuan_money_view"
                        style="@style/store_check_black_textview_style"
                        android:layout_width="0dip"
                        android:layout_height="fill_parent"
                        android:layout_gravity="center_vertical|right"
                        android:layout_weight="1"
                        android:background="@null"
                        android:gravity="right|center_vertical" />
                </LinearLayout>

                <View style="@style/horizontal_no_margin_divider_style" />
            </LinearLayout>

            <!-- 备注 -->

            <View
                style="@style/horizontal_no_margin_divider_style"
                android:layout_marginTop="20dip" />

            <LinearLayout
                style="@style/store_check_linear_item_style"
                android:background="@color/white" >

                <TextView
                    style="@style/store_check_black_textview_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="备注" />

                <EditText
                    android:id="@+id/beizhu_view"
                    style="@style/store_check_grary_textview_style"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|right"
                    android:layout_marginLeft="10dip"
                    android:layout_weight="1"
                    android:background="@null"
                    android:enabled="false"
                    android:gravity="right|center_vertical"
                    android:paddingLeft="10dip"
                    android:paddingRight="10dip"
                    android:textCursorDrawable="@drawable/editcursor_bg" />
            </LinearLayout>

            <View style="@style/horizontal_no_margin_divider_style" />

            <View
                style="@style/horizontal_no_margin_divider_style"
                android:layout_marginTop="20dip" />

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <com.meetrend.haopingdian.widget.MyListView
                    android:id="@+id/check_list"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:cacheColorHint="#00000000"
                    android:divider="@color/listview_line_color"
                    android:dividerHeight="1px" />
            </FrameLayout>

            <View style="@style/horizontal_no_margin_divider_style" />
        </LinearLayout>
    </com.meetrend.haopingdian.util.BounceScrollView>

</LinearLayout>