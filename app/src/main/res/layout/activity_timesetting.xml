<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f7f7f7"
    android:fitsSystemWindows="true"
    android:orientation="vertical" >

    <include layout="@layout/three_widget_titlelayout" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="26dip"
        android:gravity="center_vertical"
        android:paddingLeft="16sp"
        android:text="在指定的时间提醒我"
        android:textColor="@color/gray_text"
        android:textSize="14sp" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="@color/listview_line_color" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="vertical"
        android:paddingLeft="20dip" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="48dip" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="上班提醒"
                android:textColor="#000000"
                android:textSize="16sp" />

            <CheckBox
                android:id="@+id/start_work_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dip"
                android:background="@drawable/selector_butn_toggle"
                android:button="@null"
                android:checked="false"
                android:text=""
                android:textOff=""
                android:textOn="" />

            <TextView
                android:id="@+id/start_work_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dip"
                android:layout_toLeftOf="@id/start_work_btn"
                android:text="09:00"
                android:textColor="#ff3b2d"
                android:textSize="16sp" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@color/listview_line_color" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="48dip" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="下班提醒"
                android:textColor="#000000"
                android:textSize="16sp" />

            <CheckBox
                android:id="@+id/finish_work_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dip"
                android:background="@drawable/selector_butn_toggle"
                android:button="@null"
                android:checked="false"
                android:text=""
                android:textOff=""
                android:textOn="" />

            <TextView
                android:id="@+id/finish_work_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dip"
                android:layout_toLeftOf="@id/finish_work_btn"
                android:text="18:00"
                android:textColor="#ff3b2d"
                android:textSize="16sp" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@color/listview_line_color" />

        <LinearLayout
            android:id="@+id/choostime_layout"
            android:layout_width="fill_parent"
            android:layout_height="48dip"
            android:background="#ffffff"
            android:paddingRight="20dip" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="重复"
                android:textColor="#000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/choose_content_view"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="6dip"
                android:layout_weight="1"
                android:gravity="right|center_vertical"
                android:textColor="@color/gray_text"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/righticon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/right_arrow" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="@color/listview_line_color" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_marginTop="20dip"
        android:background="@color/listview_line_color" />

    <RelativeLayout
        android:id="@+id/sign_des_layout"
        android:layout_width="fill_parent"
        android:layout_height="48dip"
        android:background="@drawable/list_item_bg"
        android:orientation="vertical"
        android:paddingLeft="20dip"
        android:paddingRight="20dip" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="功能介绍"
            android:textColor="#000000"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/right_arrow" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="@color/listview_line_color" />

</LinearLayout>