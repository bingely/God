<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/window_bg"
    android:fitsSystemWindows="true"
    android:orientation="vertical" >

    <!--<include layout="@layout/two_widget_title_layout" />-->

    <include layout="@layout/head_search_edit_layout" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.6dip"
        android:background="@color/black_line_color" />

    <ListView
        android:id="@+id/mysearchlistview"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:cacheColorHint="#00000000"
        android:divider="@color/listview_line_color"
        android:dividerHeight="1px" />

    <RelativeLayout
        android:id="@+id/emptyview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f7f7f7"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingTop="50dip"
        android:visibility="gone" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="没有搜索结果"
            android:textColor="@color/gray_text"
            android:textSize="14sp" />
    </RelativeLayout>

</LinearLayout>