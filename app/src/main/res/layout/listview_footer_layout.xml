<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dip"
    android:background="#ffffff"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/footerviewlayout"
        android:layout_width="fill_parent"
        android:layout_height="60dip"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="horizontal" >

   <!--      <ProgressBar
            android:id="@+id/footer_press"
            style="@android:attr/progressBarStyleSmall"
            android:layout_width="30dip"
            android:layout_height="30dip"
            android:layout_gravity="center_vertical"
            android:visibility="gone" /> -->
        
        <com.meetrend.haopingdian.widget.ProgressWheel
                     xmlns:wheel="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/footer_press"
                    style="@android:style/Widget.ProgressBar.Small"
                    android:layout_width="20dip"
                    android:layout_height="20dip"
                    android:layout_gravity="center_vertical"
                    wheel:matProg_barColor="#ff0000"
                    wheel:matProg_barWidth="2dip"
                    android:visibility="gone"
                    wheel:matProg_progressIndeterminate="true" />

        <TextView
            android:id="@+id/load_more_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="点击加载更多"
            android:textColor="@color/gray_text"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/boottom_arrow"
            android:layout_marginLeft="5dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:scaleType="centerCrop"
            android:src="@drawable/boottom_arrow" />
    </LinearLayout>

</RelativeLayout>