<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/window_bg_color" >

    <include layout="@layout/three_widget_titlelayout" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="88dip"
        android:text="@string/today_shouquanma_text"
        android:textColor="#797979"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/show_code_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="44dip"
        android:textColor="#252525"
        android:textSize="49sp" />

    <Button
        android:id="@+id/get_code_btn"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/comment_btn_height"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:layout_marginTop="109dip"
        android:background="@drawable/button_green"
        android:gravity="center"
        android:text="@string/re_create_text"
        android:textColor="#ffffff"
        android:textSize="@dimen/txt_18" />

</LinearLayout>